<h1>
	<% if @parent_model && @parent_model.respond_to?(:name) -%>
		<%= @parent_model.name %>
	<% else -%>
		Pages
	<% end -%>
</h1>

<ul class="cadmus_page_list">
<% @pages.each do |page| %>
  <li><%= link_to page.name, { :action => 'show', :page_glob => page.slug } %></li>
<% end %>
</ul>

<br />

<%= link_to 'New Page', :action => 'new' %>
